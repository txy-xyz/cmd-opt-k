{
  "name": "code-copy-helper",
  "displayName": "代码复制助手",
  "description": "将选中的代码片段及其路径和行号信息复制到剪贴板",
  "version": "0.0.1",
  "publisher": "yangtian20231",
  "repository": {
    "type": "git",
    "url": "https://github.com/txy-xyz/cmd-opt-k.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeCopy.copySelectionToClipboard",
        "title": "复制代码（含路径和行号）"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeCopy.copySelectionToClipboard",
          "group": "9_cutcopypaste@100",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'ESLint not configured'",
    "test": "echo 'Tests not configured'"
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}
